<% book.comments.each do |comment| %>
  <% comment_user = comment.user %>
  <tr>
  	<td>
  		<%= link_to user_path(comment_user), class: "user_#{comment_user.id}" do %>
    		<%= image_tag comment.user.get_profile_image %><br>
    		<%= comment_user.name %>
  		<% end %>
  	</td>
  	<td><%= comment.comment %></td>
  	<% if current_user == comment_user %>
    	<td><%= link_to 'Destroy', book_comment_path(comment.book_id, comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
  	<% end %>
  </tr>
<% end %>