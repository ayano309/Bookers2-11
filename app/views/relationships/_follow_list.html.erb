<div class = "col-md-8 offset-md-1">
 <table class="table table-hover table-inverse">
  <thead>
   <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% if users.exists? %>
    <% users.each do |user| %>
      <tr>
       <td><%= link_to image_tag( user.get_profile_image), user_path(user.id) %></td>
       <td><%= user.name %></td>
       <td>フォロー数: <%= user.followings.count %></td>
       <td>フォロワー数: <%= user.followers.count %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
   <% end %>
  <% else %>
   <p>ユーザーはいません</p>
  <% end %>
 </tbody>
</table>
</div> 

